<?xml version="1.0"?>
<!--
DESCRITPION
-->


<launch>

	<arg name="port_left" default="/dev/ttyUSB0"/>
	<arg name="port_right" default="/dev/ttyUSB1"/>

	<include file="$(find s3000_laser)/launch/s3000_laser.launch">
		<arg name="port" value="$(arg port_left)"/>
		<arg name="frame_id" value="/s3000_optical_link_left"/>
		<arg name="node_name" value="s3000_left"/>
		<arg name="topic_name" value="/scan_left"/>
	</include>
	<include file="$(find s3000_laser)/launch/s3000_laser.launch">
		<arg name="port" value="$(arg port_right)"/>
		<arg name="frame_id" value="/s3000_optical_link_right"/>
		<arg name="node_name" value="s3000_right"/>
		<arg name="topic_name" value="/scan_right"/>
	</include>
        <node pkg="ira_laser_tools" name="laserscan_multi_merger" type="laserscan_multi_merger" output="screen">
                <param name="destination_frame" value="/base_link"/>
                <param name="cloud_destination_topic" value="/merged_cloud"/>
                <param name="scan_destination_topic" value="/scan"/>
                <param name="laserscan_topics" value ="/scan_left /scan_right" /> <!-- LIST OF THE LASER SCAN TOPICS TO SUBSCRIBE -->

                <param name="angle_min" value="-2.0"/>
                <param name="angle_max" value="2.0"/>
                <param name="angle_increment" value="0.0058"/>
                <param name="scan_time" value="0.0333333"/>
                <param name="range_min" value="0.30"/>
                <param name="range_max" value="50.0"/>
		
	</node>
</launch>
